{
  "ConnectionStrings": {
    "WriteDatabase": "Server=finance-sqlserver-db,1433;Database=FinanceDb;User Id=sa;Password=MyStrongPassword123!;TrustServerCertificate=True;",
    "ReadDatabase": "Host=finance-postgre-db;Port=5432;Database=FinanceReadDb;Username=postgres;Password=MyStrongPassword123!;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Key": "ThisIsASecureKeyWithMoreThan32Chars!!123",
    "Issuer": "FinanceAPI",
    "Audience": "FinanceApp"
  },
  "AllowedHosts": "*"
}