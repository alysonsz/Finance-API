@using MudBlazor
@using MudBlazor.Services
@using Microsoft.AspNetCore.Components

@inject IPopoverService PopoverService

<CascadingValue Value="PopoverService" IsFixed="true">
    <MudThemeProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudPopoverProvider />

    @ChildContent
</CascadingValue>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
